		"esbuild": "^0.18.17",
		"eslint": "^8.46.0",
		"eslint-plugin-deprecation": "^1.5.0",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-only-warn": "^1.1.0",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.6"
